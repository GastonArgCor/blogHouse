generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId // Id único y generado automáticamente
  title       String // Título del blog
  description String // Descripción del blog
  createdAt   DateTime @default(now()) // Fecha de creación del blog
}
